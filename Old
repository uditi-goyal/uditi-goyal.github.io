<p> Area of Cube </p>
<p> </p><center>
public double cube(double x){
 double cube;
	 cube = (x * x * x);
	 return cube;
 }

<p></p>
</center>

<p> </p><center> Area of Rectangle
public double calcAreaOfRectangle(double x, double y){
	double calcAreaOfRectangle;
	calcAreaOfRectangle = (x * y);
	return calcAreaOfRectangle;
}
<p></p></center>

<p> </p><center> Area of Circle
public double calcAreaOfCircle(double r){
	double calcAreaOfCircle;
	calcAreaOfCircle = (Math.PI * r * r );
	return calcAreaOfCircle;
}
 </center><p></p>

 <p> </p><center> Circumference of Circle:

public double circumOfCircle(double r){
	double circumOfCircle;
	circumOfCircle = (2*Math.pi*r);
	Return circumOfCircle;
}
 </center><p></p>

 <p> </p><center> Area of Triangle
public double calcAreaOfTriangle(double x, double y){
	double calcAreaOfTriangle;
	calcAreaOfTriangle = (1.0/2.0 * x * y);
	return calcAreaOfTriangle;

}
 </center><p></p>

 <p> </p><center> Volume of Sphere
public double calcVolOfSphere(double r){
	double calcVolOfSphere;
	calcVolOfSphere = ( 4.0/3 * Math.PI * r * r * r );
	return calcVolOfSphere;
}
 </center><p></p>


 <p> </p><center> Calculate Slope
public double calcSlope(double x1, double y1, double x2, double y2){
	double yDiff = y2 - y1;
	double xDiff = x2 - x1;
	double calcSlope = yDiff / xDiff;
	return calcSlope;

}
 </center><p></p>


 <p> </p><center> Fahrenheit to Celsius Conversion
public double calcFahrenheitToCelsius(double F) {
	Dou	ble temperature;
	temperature = ((F - 32) / 1.8);
	return temperature;

}

 </center><p></p>


 <p> </p><center>Difference between two numbers‚Äù

public double calcDifference(double x1, double x2){
	double calcDifference;
	calcDifference = Math.abs(x2 - x1);
	return calcDifference;

}

 </center><p></p>

 <p> </p><center>
 Area of a triangle:

public double calcAreaOfTriangle(double x, double y){
	double calcAreaOfTriangle;
	calcAreaOfTriangle = (1.0/2.0 * x * y);
	return calcAreaOfTriangle;

}


}
 </center><p></p>
 <p> </p><center>Distance formula:
public double calcDistance(double x1, double y1, double x2, double y2){
	double calcTotalDistance;
	double sqDiffX = Math.pow((x2 -x1), 2);
	double sqDiffY = Math.pow((y2 -y1), 2);
	double distance = Math.sqrt(sqDiffY + sqDiffX);
	return distance;

}
 </center><p></p>
